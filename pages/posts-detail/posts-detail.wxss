/* pages/posts-detail/posts-detail.wxss */
.container {
  padding-bottom: 50rpx;
}
.container .banner {
  width: 100%;
  height: 460rpx;
}
.content {
  padding: 0 30rpx;
}
.auth-info {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding: 20rpx 0;
}
.auth-info .avatar {
  width: 60rpx;
  height: 60rpx;
}
.auth-info text {
  padding-left: 20rpx;
  color: #666;
  font-weight: 300;
}
.auth-info .const,
.auth-info .date {
  font-size: 24rpx;
  color: #999;
}
.title {
  display: block;
  color: #4b556c;
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 1px;
}
.btns {
  position: relative;
  margin: 20rpx 10rpx;
  display: flex;
  justify-content: flex-end;
}
.btns .line {
  width: calc(100% - 160rpx);
  position: absolute;
  top: 50%;
  left: 0;
  border-bottom: 1px solid #ccc;
  z-index: -1;
}
.btns image {
  width: 70rpx;
  height: 70rpx;
}
.btns .share {
  margin-left: 30rpx;
}
.detail-text {
  user-select: text;
}