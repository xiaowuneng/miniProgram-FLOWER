/* pages/posts/posts.wxss */
.swiper-wrapper {
  width: 100%;
  height: 460rpx;
}

.swiper-wrapper image {
  width: 100%;
  height: 460rpx;
}

.posts {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  padding: 20rpx 0 0;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}

.posts .author-date {
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}

.posts .author-date .author {
  width: 60rpx;
  height: 60rpx;
  padding-right: 20rpx;
}

.posts .author-date .date {
  font-size: 26rpx;
}

.posts .title {
  padding: 20rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.posts .img {
  width: 100%;
  height: 340rpx;
  padding-bottom: 30rpx;
}

.posts .content {
  color: #666;
  font-size: 28rpx;
  padding: 0 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  text-align: justify;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}
.posts .link {
  display: flex;
  align-items: center;
  padding: 20rpx;
  font-size: 24rpx;
}
